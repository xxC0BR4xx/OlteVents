@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode"  Theme="OlteVentsTheme" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Default" Link="https://mudblazor.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Default" Link="https://github.com/xxC0BR4xx" Target="_blank" />
        <MudSwitch @bind-Value="_isDarkMode" Color="Color.Default" Class="ma-4" T="bool" Label="Toggle Light/Dark Mode" />

    </MudAppBar>

    <MudAppBar Bottom="true">

    <MudToolBar Class="justify-space-between" Style="width:100%;">
            <MudIconButton Color="Color.Default" Href="/" Icon="@Icons.Material.Filled.Home" aria-label="delete" />
            <MudIconButton Color="Color.Default" Href="/Favourites" Icon="@Icons.Material.Filled.Star" Disabled="false" aria-label="share" />
            <MudIconButton Color="Color.Default" Href="/Create" Icon="@Icons.Material.Filled.AddCircle" Disabled="false" aria-label="share" />
            <MudIconButton Color="Color.Default" Href="/Account" Icon="@Icons.Material.Filled.AccountCircle" Disabled="false" aria-label="share" />
            <MudIconButton Color="Color.Default" Href="/Settings" Icon="@Icons.Material.Filled.Settings" Disabled="false" aria-label="share" />


    </MudToolBar>
    </MudAppBar>
    
       
        
        
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">MyApplication</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-5 pt-5">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private bool _isDarkMode;


    MudTheme OlteVentsTheme = new MudTheme()
    {
        PaletteLight = new PaletteLight()
        {
            Primary = Colors.Teal.Lighten4,
            Secondary = Colors.Gray.Darken4,
            Tertiary = Colors.Teal.Accent4,
            Background = Colors.Gray.Lighten5,
            AppbarBackground = Colors.Teal.Default,
        },
        PaletteDark = new PaletteDark()
        {
            Primary = Colors.Gray.Darken3,
            Secondary = Colors.Gray.Lighten5,
            Background = Colors.Gray.Darken4,
            AppbarBackground = Colors.Teal.Darken4,
        },

    };



    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    
}